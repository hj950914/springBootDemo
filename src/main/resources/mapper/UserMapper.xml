<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.mapper.UserMapper">

    <sql id="userColumn">
        id,username,password
    </sql>

    <!--查询全部用户-->
    <select id="selectAll" resultType="com.hj.entity.User">
        select
        <include refid="userColumn"/>
        from user
    </select>
    <!--查询单个用户-->
    <select id="selectById" parameterType="Long" resultType="com.hj.entity.User">
        select
        <include refid="userColumn"/>
        from user
        where id=#{id}
    </select>
    <!--插入用户-->
    <insert id="insert" parameterType="com.hj.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into user (username,password)
        values (#{username},#{password})
    </insert>
</mapper>